package uo.sdi.acciones;

import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import uo.sdi.model.Rating;
import uo.sdi.model.User;
import uo.sdi.persistence.PersistenceFactory;
import alb.util.log.Log;

public class CerrarSesionAction implements Accion {

	@Override
	public String execute(HttpServletRequest request,
			HttpServletResponse response) {
		
		User promotor;
		List<Rating> comentariosPromotor;
		
		Long idPromotor = Long.valueOf(request.getParameter("id"));
		
		HttpSession sesion;
		
		try {
			sesion = request.getSession().invalidate();
			
		}
		catch (Exception e) {
			Log.error("Algo ha ocurrido cerrando la sesi√≥n");
		}
		return "EXITO";
	}
	
	@Override
	public String toString() {
		return getClass().getName();
	}
	
}
